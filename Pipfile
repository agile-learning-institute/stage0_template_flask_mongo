[[source]]
url = "https://pypi.org/simple"
verify_ssl = true
name = "pypi"

[packages]
flask = "*"
pymongo = "*"
prometheus-flask-exporter = "*"
pyjwt = "*"
api-utils = {editable = true, git = "https://github.com/agile-crafts-people/api_utils.git", ref = "main"}

[dev-packages]
pytest = "*"
black = "*"
setuptools = "*"
build = "*"
twine = "*"
requests = "*"

[scripts]
build = "python -m build"
dev = "sh -c 'PYTHONPATH=. python src/server.py'"
test = "sh -c 'PYTHONPATH=. pytest test/ -v -m \"not e2e\"'"
e2e = "sh -c 'PYTHONPATH=. pytest test/ -m e2e -v'"
lint = "black --check src test"
format = "black src test"
container = "docker build -t ghcr.io/agile-crafts-people/evaluator_api:latest ."
db = "sh -c 'de down && de up mongodb'"
api = "sh -c 'de down && de up evaluator-api'"
service = "sh -c 'de down && de up evaluator'"

[requires]
python_version = "3.12"
python_full_version = "3.12.2"

